{
  "parser": "babel-eslint",

  "plugins": [
    "react-native",
    "prettier",
    "jest"
  ],

  "extends": [
    "airbnb",
    "prettier/react"
  ],

  "env": {
    "jest/globals": true
  },

  "rules": {
    "react/prop-types": 0,
    "default-case": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-use-before-define": 0,
    "import/prefer-default-export": 0,
    "semi": [2, "never"],
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "react/prefer-stateless-function" : 0
  }
}
